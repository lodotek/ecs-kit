{
  "family":"stackname",
  "networkMode":"host",
  "volumes":[
    {
      "name":"conf",
      "host":{
        "sourcePath":"/helloworld.yml"
      }
    },
    {
      "name":"log",
      "host":{
        "sourcePath":"/var/log/helloworld"
      }
    }
  ],
  "containerDefinitions":[
    {
      "name":"helloworld",
      "image":"helloworld/helloworld:latest",
      "cpu":1000,
      "memory":2000,
      "privileged":true,
      "essential":true,
      "portMappings":[
        {
          "containerPort":8080,
          "hostPort":8080,
          "protocol":"tcp"
        }
      ],
      "environment":[
        {
          "name":"SOME_KEY",
          "value":"SOME_VALUE"
        }
      ],
      "mountPoints":[
        {
          "sourceVolume":"conf",
          "containerPath":"/helloworld.yml"
        },
        {
          "sourceVolume":"log",
          "containerPath":"/var/log/helloworld"
        }
      ]
    }
  ]
}